---
const { GITHUB_USER, REPO_NAME, stars } = Astro.props;
import { Icon } from 'astro-icon/components'
---

<a 
    href={`https://github.com/${GITHUB_USER}/${REPO_NAME}`}
    target="_blank"
    rel="noopener noreferrer"
    class="group px-2 lg:px-3 xl:px-4 py-1.5 lg:py-2 bg-gradient-to-r from-blue-600/30 to-purple-600/30 hover:from-blue-600/40 hover:to-purple-600/40 text-blue-300 rounded-full transition-all duration-200 hover:scale-105 border border-blue-500/20 flex items-center gap-1.5 lg:gap-2"
>
    <div class="flex items-center gap-1.5 text-[10px] lg:text-xs xl:text-sm">
        <span class="flex items-center gap-1 px-2 py-0.5 bg-blue-500/20 rounded-full font-semibold">
            <Icon name="star" class="w-3.5 h-3.5 transition-transform group-hover:rotate-12" /> 
            {stars}
        </span>
        <span class="text-blue-200/80">Most interesting is here!</span>
    </div>
</a>
