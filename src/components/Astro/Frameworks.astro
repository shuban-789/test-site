---
import { frameworks } from '../../data/navigation';
import { Icon } from 'astro-icon/components'

// Helper function to capitalize first letter
const capitalize = (str: string) => str.charAt(0).toUpperCase() + str.slice(1);
---

<section id="frameworks" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-cal font-bold text-center mb-12 bg-gradient-to-r from-orange-500 via-purple-500 to-blue-500 bg-clip-text text-transparent">
            Available Frameworks
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {frameworks.map((framework) => (
                <a
                    href={framework.path}
                    class="group relative p-6 bg-gray-900/50 backdrop-blur-sm rounded-2xl border border-gray-800/50 hover:border-purple-500/50 transition-all duration-300 hover:shadow-[0_0_30px_-12px_rgba(168,85,247,0.5)]"
                >
                    <div class="flex items-center gap-4">
                        <div 
                            class="w-14 h-14 rounded-xl flex items-center justify-center transition-transform duration-300 group-hover:scale-110"
                            style={`background-color: ${framework.color}15`}
                        >
                            <Icon 
                                name={framework.name} 
                                class="w-8 h-8 transition-all duration-300 group-hover:scale-110" 
                                style={`color: ${framework.color}`}
                            />
                        </div>
                        <div class="flex-1">
                            <h3 class="text-xl font-bold text-white group-hover:text-purple-400 transition-colors">
                                {framework.name === 'vuejs' ? 'Vue' : 
                                 framework.name === 'solidjs' ? 'SolidJS' : 
                                 framework.name === 'html' ? 'HTML' : 
                                 capitalize(framework.name)}
                            </h3>
                            <p class="text-gray-400 group-hover:text-gray-300 transition-colors">
                                View Template
                            </p>
                        </div>
                        <div class="opacity-0 group-hover:opacity-100 transition-all duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400">
                                <path d="M5 12h14"></path>
                                <path d="m12 5 7 7-7 7"></path>
                            </svg>
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </div>
</section>

<style>
    section {
        perspective: 1000px;
    }
    
    .grid > a {
        transform: translateZ(0);
        transition: transform 0.3s ease;
    }
    
    .grid > a:hover {
        transform: translateZ(20px);
    }
</style>
